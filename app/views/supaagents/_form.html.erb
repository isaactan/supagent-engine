      <% end %>
      </ul>
    </div>
  <% end %>
  
     
  <div class="formbox">
     <h1>SupaAgent Application</h1>
     
     <div class="form-group"

    <div class="field">
      <!--<h3>1. Please fill in your application ID provided in the email</h3>--->
