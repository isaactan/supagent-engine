      <!--<h3>3.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod</h3>-->
      <%= f.text_field :name, placeholder: "Name as per ID", class: "form-control" %>
    </div>
    
    <div class="field">
      <!--<h3>4.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod</h3>-->
